<configuration status="WARN">
    <appenders>
        <console name="Console" target="SYSTEM_OUT">
            <patternlayout pattern="%d{ISO8601} %p [%t] %c - %m%n"></patternlayout>
        </console>
        <rollingfile name="RollingFile" filename="/data/druid/cluster_1/overlord/logs/overlord.log" filepattern="/data/druid/cluster_1/overlord/logs/$${date:yyyy-MM}/overlord-%d{MM-dd-yyyy}-%i.log.gz">
            <patternlayout>
                <pattern>%d %p %c{1.} [%t] %m%n</pattern>
            </patternlayout>
            <policies>
                <timebasedtriggeringpolicy></timebasedtriggeringpolicy>
                <sizebasedtriggeringpolicy size="250 MB"></sizebasedtriggeringpolicy>
            </policies>
        </rollingfile>
    </appenders>
    <loggers>
        <root level="info">
            <appenderref ref="RollingFile"></appenderref>
        </root>
    </loggers>
</configuration>


